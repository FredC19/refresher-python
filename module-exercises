from random import randint, choices
import string

#task-1
def random_user_id(length):
    id = ""
    for x in range (length):
        if randint(0,36) > 26:
            new_char = (string.digits[randint(1,10)])
        else:
            new_char = (string.ascii_lowercase[randint(0,25)])
        id+= new_char
    return id

# print(random_user_id(6))
# print(string.ascii_lowercase[1])

#task-2

def user_id_gen_by_user():
    length =int(input("How long do you want it?"))
    ids = int(input("How many times do you want it?"))
    for x in range(ids):
        print(random_user_id(length))

